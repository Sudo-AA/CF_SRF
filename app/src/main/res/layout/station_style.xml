<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/design_default_color_on_primary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/stncard"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/cf"
            android:backgroundTint="@color/cf"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="1dp"
                android:padding="5dp"
                tools:layout_editor_absoluteY="1dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight=".4"
                    android:foregroundGravity="center_vertical"
                    app:srcCompat="@drawable/filling_station_gasoline_fuel_dispenser_pump_icon_png_favpng_bebzcwcaumkjn3vvnest4z0my" />

                <TextView
                    android:id="@+id/station_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="3dp"
                    android:textSize="12dp"
                    android:text="KLEAN FUEL AUTO LPG REFILLERS, INC.-EDSA PHILAM"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/station_code"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:padding="4dp"
                    android:textSize="10dp"
                    android:text="KL"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>