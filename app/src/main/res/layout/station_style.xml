<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/design_default_color_on_primary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/stncard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cf"
            android:backgroundTint="@color/cf"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="1dp"
                android:padding="5dp"
                tools:layout_editor_absoluteY="1dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left|center"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight=".2"
                    android:foregroundGravity="center_vertical"
                    app:srcCompat="@drawable/filling_station_gasoline_fuel_dispenser_pump_icon_png_favpng_bebzcwcaumkjn3vvnest4z0my" />

                <TextView
                    android:id="@+id/station_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left|center"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="KLEAN FUEL AUTO LPG REFILLERS, INC.-EDSA PHILAM"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/station_code"
                    android:layout_width="43dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="left|center"
                    android:padding="4dp"
                    android:text="KL"
                    android:textColor="@color/white"
                    android:textSize="10dp" />


                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_IT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop=".2dp"
                        android:layout_marginBottom=".2dp"
                        android:padding="1dp"

                        app:cardBackgroundColor="@color/IT"
                        app:cardCornerRadius="100dp">

                        <TextView
                            android:id="@+id/up_pending_IT"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="99"
                            android:textColor="@color/white"
                            android:textSize="9dp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_ME"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop=".2dp"
                        android:layout_marginBottom=".2dp"
                        android:padding="1dp"

                        app:cardBackgroundColor="#FF9F12"
                        app:cardCornerRadius="100dp">

                        <TextView
                            android:id="@+id/up_pending_ME"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="99"
                            android:textColor="@color/white"
                            android:textSize="9dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_MT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop=".2dp"
                        android:layout_marginBottom=".2dp"
                        android:padding="1dp"
                        app:cardBackgroundColor="#FF0000"
                        app:cardCornerRadius="100dp">


                            <TextView
                                android:id="@+id/up_pending_MT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="6"
                                android:textColor="@color/white"
                                android:textSize="9dp" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>